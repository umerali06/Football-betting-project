# FIXORA PRO - Local Settings Example
# Copy this file to settings.local.env and modify as needed

# Database Configuration
DATABASE_FILE=betting_data.db
CACHE_ENABLED=true
CACHE_DURATION=3600

# Odds Filtering
MIN_ODDS=1.8
MAX_ODDS=10.0

# Value Bet Analysis
VALUE_BET_THRESHOLD=0.05
CONFIDENCE_THRESHOLD=0.6

# Risk Management
MAX_BETS_PER_DAY=10
MAX_BETS_PER_MATCH=2
BANKROLL_PERCENTAGE=0.02
KELLY_CRITERION_ENABLED=true

# Stake Management
STAKE_ROUNDING=1.0  # Round stakes to nearest unit
DAILY_STAKE_CAP=100.0  # Maximum daily stake in units

# Timezone Settings
DEFAULT_TIMEZONE=Asia/Karachi
REPORT_TIMEZONE=Europe/London

# API Configuration
API_FOOTBALL_KEY=your_api_football_key_here
SPORTMONKS_KEY=your_sportmonks_key_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Report Configuration
REPORT_OUTPUT_DIR=reports
WEEKLY_REPORT_ENABLED=true
DAILY_DIGEST_TIME=08:00

# Logging
LOG_LEVEL=INFO
LOG_FILE=football_betting.log

# Development
DEBUG_MODE=false
SAMPLE_DATA_ENABLED=true
